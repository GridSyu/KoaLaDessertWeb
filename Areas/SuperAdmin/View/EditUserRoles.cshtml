@using Microsoft.AspNetCore.Identity
@model IdentityUser

@{
    ViewData["Title"] = "編輯使用者角色";
    var allRoles = ViewBag.AllRoles as List<string>;
    var userRoles = ViewBag.UserRoles as IList<string>;
}

<h1>編輯使用者角色 - @Model.Email</h1>
<form asp-action="EditUserRoles" method="post">
    <input type="hidden" name="id" value="@Model.Id" />
    <div class="form-group">
        @foreach (var role in allRoles)
        {
                <div class="form-check">
                    <input type="checkbox" class="form-check-input" name="roles" value="@role" 
                           @(userRoles.Contains(role) ? "checked" : "") />
                    <label class="form-check-label">@role</label>
                </div>
        }
    </div>
    <button type="submit" class="btn btn-success">儲存</button>
    <a asp-action="ManageUsers" class="btn btn-secondary">返回</a>
</form>